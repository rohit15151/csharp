
@using BlazorWASM.Services
@namespace Login
@inject NavigationManager navMgr
@inject IAuthService authService

<AuthorizeView>
    <Authorized>
        <img style="width: 30px; cursor: pointer;" src="Logout.png" @onclick="Logout"/>
    </Authorized>
    <NotAuthorized>
        <img style="width: 30px; cursor: pointer;" src="Login.png" @onclick="Login"/>
    </NotAuthorized>
</AuthorizeView>

@code {

    private void Login()
    {
        navMgr.NavigateTo("/");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }

}